

PCOLOR=$(echo $PCOLOR |  grep -o '[[:digit:]]*' | cut -c 4)

case $(tty) in /dev/tty[0-9]*)
     prompt='%B%(?.%F{$PCOLOR}.%F{1})$(shrink_path -l -t)%b%f %B%(?.%F{$PCOLOR}.%F{1})>%b%f  %f'
     RPROMPT='%(?..%F{1}[%?] )| %T'
   ;;
  *)
     prompt='%B%(?.%F{$PCOLOR}.%F{1}) %b%f %(?.%F{$PCOLOR}.%F{1})$(shrink_path -l -t)%f%f$(gitprompt)  '
     RPROMPT='%(?..%F{1}窱%?%f  )${prompt_elapsed_time}%T'
   ;;
esac
